{
	"name": "vk-block",
	"version": "1.0.0",
	"description": "",
	"main": "gulpfile.js",
	"scripts": {
		"start": "wp-env start && open http://localhost:8888",
		"stop": "wp-env stop",
		"destroy": "wp-env destroy",
		"watch": "gulp watch",
		"build:dev": "wp-scripts build --config webpack.config.js --mode=development && gulp build:dev:pro",
		"build": "gulp text-domain && wp-scripts build --config webpack.config.js && gulp build:pro && npm run translate",
		"build:free": "wp-scripts build --config webpack.config.js && gulp build:free",
		"build:pot": "wp i18n make-pot --merge=inc/vk-blocks/languages/vk-blocks-js.pot --skip-js . inc/vk-blocks/languages/vk-blocks.pot",
		"translate": "npm run build:pot && po2json ./inc/vk-blocks/languages/vk-blocks-ja.po ./inc/vk-blocks/languages/vk-blocks-ja-vk-blocks-build-js.json -f jed",
		"gulp": "gulp",
		"lint": "wp-scripts format src/ && wp-scripts lint-js src/ --fix",
		"fixtures:clean": "rimraf \"test/e2e-tests/fixtures/blocks/*.+(json|serialized.html)\"",
		"fixtures:generate": "cross-env GENERATE_MISSING_FIXTURES=y wp-scripts test-unit-js --config test/jest.config.js test/integration/full-content/full-content.test.js",
		"fixtures:regenerate": "npm run build && npm run fixtures:clean && npm run fixtures:generate",
		"test-unit": "npm run test-unit:clean && npm run fixtures:regenerate",
		"test-unit:withcache": "npm run fixtures:regenerate",
		"test-unit:clean": "wp-scripts test-unit-js --clearCache",
		"composer:install": "wp-env run composer \"composer install\"",
		"phpunit": "wp-env run phpunit \"phpunit -c /var/www/html/wp-content/plugins/vk-blocks-pro/phpunit.xml.dist --verbose\"",
		"cli": "wp-env run cli",
		"show:savedVersion": "bash -c 'npm run cli wp post meta get $0 _vkb_saved_block_version'",
		"update:savedVersion": "bash -c 'npm run cli wp post meta update $0 _vkb_saved_block_version $1'",
		"reinstall": "rm -rf node_modules/ && npm install && npm run build",
		"prepare": "husky install"
	},
	"author": "",
	"license": "MIT",
	"browserslist": [
		"last 2 version",
		"> 5%"
	],
	"devDependencies": {
		"@emotion/babel-plugin": "^11.3.0",
		"@wordpress/babel-plugin-makepot": "^4.1.4",
		"@wordpress/block-editor": "^6.1.2",
		"@wordpress/block-library": "^3.2.3",
		"@wordpress/block-serialization-default-parser": "^4.1.1",
		"@wordpress/blocks": "^9.1.2",
		"@wordpress/env": "^4.0.5",
		"@wordpress/scripts": "^16.1.2",
		"@wp-g2/create-styles": "0.0.164",
		"babel-loader": "^8.2.2",
		"babel-plugin-inline-json-import": "^0.3.2",
		"classnames": "^2.3.1",
		"cross-env": "^7.0.3",
		"gettext-parser": "4.0.4",
		"gettext-to-messageformat": "0.4.0",
		"gulp": "^4.0.2",
		"gulp-autoprefixer": "^8.0.0",
		"gulp-clean-css": "^4.3.0",
		"gulp-concat": "^2.6.1",
		"gulp-jsmin": "^0.1.5",
		"gulp-load-plugins": "^2.0.7",
		"gulp-notify": "^4.0.0",
		"gulp-plumber": "^1.2.1",
		"gulp-rename": "^2.0.0",
		"gulp-replace": "^1.1.3",
		"gulp-sass": "^4.1.0",
		"husky": "^6.0.0",
		"jest-transform-stub": "^2.0.0",
		"nodegit": "^0.27.0",
		"npm-check-updates": "^11.6.0",
		"po2json": "^1.0.0-beta-3",
		"prettier": "^2.3.1",
		"react": "16.14.0",
		"react-with-direction": "^1.3.1",
		"rimraf": "^3.0.2",
		"url-loader": "^4.1.1"
	},
	"dependencies": {
		"@wordpress/components": "^14.1.2",
		"@wordpress/data": "^5.1.1",
		"@wordpress/edit-post": "^4.1.4",
		"@wordpress/element": "^3.1.1",
		"@wordpress/hooks": "^3.1.1",
		"@wordpress/i18n": "^4.1.1",
		"@wordpress/icons": "^4.0.1",
		"@wordpress/list-reusable-blocks": "^2.1.2",
		"@wordpress/plugins": "^3.1.1",
		"@wordpress/viewport": "^3.1.1",
		"compare-versions": "^3.6.0",
		"lodash": "^4.17.21",
		"memize": "^1.1.0",
		"react-dom": "16.14.0",
		"react-html-parser": "^2.0.2"
	}
}
